<div class="container main-content">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/utilities">Utilities</a></li>
                    <li class="breadcrumb-item active">File: <%= filename %></li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i> <%= filename %>
                    </h2>
                    <div>
                        <a href="/utilities/file/<%= filepath %>" class="btn btn-sm btn-outline-secondary" download>
                            <i class="fas fa-download me-1"></i> Download
                        </a>
                        <a href="/utilities" class="btn btn-sm btn-outline-primary ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to Files
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="text-viewer">
                        <pre><%= content %></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-viewer {
        border: 1px solid #eee;
        border-radius: 4px;
        padding: 1.5em;
        max-height: 700px;
        overflow: auto;
        background-color: #f8f9fa;
        font-family: "Courier New", Courier, monospace;
        white-space: pre-wrap;
        word-wrap: break-word;
    }
</style>