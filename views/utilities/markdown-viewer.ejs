<div class="container main-content">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/utilities">Utilities</a></li>
                    <li class="breadcrumb-item active">File: <%= filename %></li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-file-alt me-2"></i> <%= filename %>
                    </h2>
                    <div>
                        <a href="/utilities/file/<%= filepath %>" class="btn btn-sm btn-outline-secondary" download>
                            <i class="fas fa-download me-1"></i> Download
                        </a>
                        <a href="/utilities" class="btn btn-sm btn-outline-primary ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to Files
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="markdown-content">
                        <div id="markdown-content-viewer"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize Showdown converter
        const converter = new showdown.Converter({
            tables: true,
            strikethrough: true,
            tasklists: true,
            ghCodeBlocks: true,
            emoji: true
        });
        converter.setFlavor('github');
        
        // Convert markdown content to HTML
        const markdownContent = `<%= content.replace(/`/g, '\\`').replace(/\$/g, '\\$') %>`;
        const html = converter.makeHtml(markdownContent);
        
        // Insert HTML content
        const container = document.getElementById('markdown-content-viewer');
        container.innerHTML = html;
        
        // Add styling classes
        container.querySelectorAll('table').forEach(table => {
            table.classList.add('table', 'table-striped', 'table-bordered');
        });
        
        container.querySelectorAll('img').forEach(img => {
            img.classList.add('img-fluid');
        });
    });
</script>