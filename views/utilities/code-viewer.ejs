<%- include('../partials/page_header', { title: 'Code Viewer: ' + filename, subtitle: 'Viewing code content' }) %>

<div class="container main-content">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow">
        <div class="card-header d-flex justify-content-between align-items-center bg-light">
          <h4 class="m-0 font-weight-bold">
            <i class="fas fa-code me-2"></i> <%= filename %>
          </h4>
          <div>
            <a href="/utilities" class="btn btn-sm btn-outline-primary me-2">
              <i class="fas fa-arrow-left"></i> Back to File Browser
            </a>
            <a href="<%= filepath %>" download class="btn btn-sm btn-outline-success">
              <i class="fas fa-download"></i> Download
            </a>
          </div>
        </div>
        <div class="card-body">
          <pre><code class="language-<%= language %>"><%= content %></code></pre>
        </div>
      </div>
    </div>
  </div>
</div>