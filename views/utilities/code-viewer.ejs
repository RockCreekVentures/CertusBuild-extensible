<div class="container main-content">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/utilities">Utilities</a></li>
                    <li class="breadcrumb-item active">File: <%= filename %></li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="fas fa-code me-2"></i> <%= filename %>
                    </h2>
                    <div>
                        <a href="/utilities/file/<%= filepath %>" class="btn btn-sm btn-outline-secondary" download>
                            <i class="fas fa-download me-1"></i> Download
                        </a>
                        <a href="/utilities" class="btn btn-sm btn-outline-primary ms-2">
                            <i class="fas fa-arrow-left me-1"></i> Back to Files
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="code-viewer">
                        <pre><code id="code-content" class="language-<%= language %>"><%= content %></code></pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Prism.js for syntax highlighting -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/themes/prism.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/prism.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-javascript.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-css.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-json.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.24.1/components/prism-markup.min.js"></script>

<style>
    .code-viewer {
        border: 1px solid #eee;
        border-radius: 4px;
        max-height: 700px;
        overflow: auto;
    }
    
    pre[class*="language-"] {
        margin: 0;
        padding: 1.5em;
        border-radius: 0;
    }
</style>