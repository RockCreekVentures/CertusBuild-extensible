<div class="container main-content">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <h1 class="text-center mb-4">CertusBuild Utilities</h1>
            <p class="lead text-center mb-5">Access site utilities including file browser and useful links.</p>

            <!-- Alert Messages -->
            <% if (typeof query !== 'undefined' && query.success) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= query.success %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>
            <% if (typeof query !== 'undefined' && query.error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    <%= query.error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            <% } %>

            <!-- Utilities Tabs -->
            <ul class="nav nav-tabs mb-4" id="utilityTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button" role="tab">
                        <i class="fas fa-folder me-2"></i> Content File Browser
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="announcements-tab" data-bs-toggle="tab" data-bs-target="#announcements" type="button" role="tab">
                        <i class="fas fa-bullhorn me-2"></i> Announcements
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="links-tab" data-bs-toggle="tab" data-bs-target="#links" type="button" role="tab">
                        <i class="fas fa-link me-2"></i> Useful Links
                    </button>
                </li>
            </ul>

            <!-- Tab Content -->
            <div class="tab-content" id="utilityTabsContent">
                <!-- File Browser Tab -->
                <div class="tab-pane fade show active" id="files" role="tabpanel">
                    <div class="card">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">
                                <i class="fas fa-folder-open me-2"></i> Content File Browser
                            </h3>
                            <button class="btn btn-sm btn-outline-success" id="uploadButton" type="button" data-bs-toggle="modal" data-bs-target="#uploadFileModal">
                                <i class="fas fa-upload me-1"></i> Upload File
                            </button>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Browse and manage content files for Pitch Materials, Research, and Announcements. Click on a file to view or edit its contents.
                            </div>
                            
                            <div class="file-browser">
                                <% 
                                // Recursive function to render file tree
                                function renderFileTree(items, level = 0) { 
                                    if (!items || items.length === 0) return '';
                                    
                                    let html = '<ul class="file-tree-list" style="padding-left: ' + (level === 0 ? '0' : '1.5rem') + ';">';
                                    
                                    items.forEach(item => {
                                        const iconClass = getFileIconClass(item);
                                        const isDir = item.type === 'directory';
                                        
                                        html += '<li class="file-tree-item">';
                                        
                                        if (isDir) {
                                            html += '<div class="file-tree-folder">';
                                            html += '<i class="fas ' + iconClass + ' me-2 text-warning"></i>';
                                            html += '<span class="file-tree-label">' + item.name + '</span>';
                                            html += '</div>';
                                            html += renderFileTree(item.children, level + 1);
                                        } else {
                                            const fileLink = isViewableInBrowser(item.name) ? 
                                                '/utilities/file/' + item.path : 
                                                '/utilities/file/' + item.path;
                                            const linkTarget = isViewableInBrowser(item.name) ? '_blank' : '_self';
                                            
                                            html += '<a href="' + fileLink + '" target="' + linkTarget + '" class="file-tree-file">';
                                            html += '<i class="fas ' + iconClass + ' me-2 text-primary"></i>';
                                            html += '<span class="file-tree-label">' + item.name + '</span>';
                                            html += '</a>';
                                        }
                                        
                                        html += '</li>';
                                    });
                                    
                                    html += '</ul>';
                                    return html;
                                }
                                %>
                                
                                <div class="file-tree-container">
                                    <%- renderFileTree(fileTree) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Announcements Tab -->
                <div class="tab-pane fade" id="announcements" role="tabpanel">
                    <div class="card">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h3 class="mb-0">
                                <i class="fas fa-bullhorn me-2"></i> Announcements
                            </h3>
                            <button class="btn btn-sm btn-outline-primary" id="editAnnouncementsBtn">
                                <i class="fas fa-edit me-1"></i> Edit Announcements
                            </button>
                        </div>
                        <div class="card-body">
                            <!-- View Mode -->
                            <div id="announcementsViewMode">
                                <div class="alert alert-info mb-4">
                                    <i class="fas fa-info-circle me-2"></i>
                                    This section displays the current announcements that will be shown on the home page.
                                </div>
                                
                                <div class="markdown-content mb-4">
                                    <%- announcementsHtml %>
                                </div>
                            </div>
                            
                            <!-- Edit Mode -->
                            <div id="announcementsEditMode" style="display: none;">
                                <div class="alert alert-warning mb-4">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                            You are editing the announcements. Use markdown syntax to format the content.
                                        </div>
                                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#markdownSyntaxHelp" aria-expanded="false" aria-controls="markdownSyntaxHelp">
                                            <i class="fas fa-question-circle me-1"></i> Markdown Help
                                        </button>
                                    </div>
                                    
                                    <div class="collapse mt-3" id="markdownSyntaxHelp">
                                        <div class="card card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h5>Basic Syntax</h5>
                                                    <table class="table table-sm table-bordered">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Element</th>
                                                                <th>Markdown Syntax</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>Heading</td>
                                                                <td><code># H1<br>## H2<br>### H3</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Bold</td>
                                                                <td><code>**bold text**</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Italic</td>
                                                                <td><code>*italicized text*</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Blockquote</td>
                                                                <td><code>> blockquote</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Ordered List</td>
                                                                <td><code>1. First item<br>2. Second item</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Unordered List</td>
                                                                <td><code>- First item<br>- Second item</code></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                                <div class="col-md-6">
                                                    <h5>Advanced Elements</h5>
                                                    <table class="table table-sm table-bordered">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Element</th>
                                                                <th>Markdown Syntax</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td>Link</td>
                                                                <td><code>[title](https://www.example.com)</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Image</td>
                                                                <td><code>![alt text](image.jpg)</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Code</td>
                                                                <td><code>`code`</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Horizontal Rule</td>
                                                                <td><code>---</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Table</td>
                                                                <td><code>| Header | Title |<br>| ------ | ----- |<br>| Cell | Cell |</code></td>
                                                            </tr>
                                                            <tr>
                                                                <td>Fenced Code Block</td>
                                                                <td><code>```<br>code block<br>```</code></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                    <div class="mt-3 text-end">
                                                        <a href="https://www.markdownguide.org/basic-syntax/" target="_blank" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-external-link-alt me-1"></i> Full Markdown Guide
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <form action="/utilities/update-announcements" method="POST">
                                    <div class="mb-3">
                                        <label for="announcementsEditor" class="form-label">Announcements Content (Markdown)</label>
                                        <textarea id="announcementsEditor" name="content" class="form-control font-monospace" rows="15" style="resize: vertical;"><%= announcementsContent %></textarea>
                                    </div>
                                    
                                    <div class="d-flex justify-content-end gap-2">
                                        <button type="button" class="btn btn-secondary" id="cancelEditBtn">
                                            <i class="fas fa-times me-1"></i> Cancel
                                        </button>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-1"></i> Save Changes
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Links Tab -->
                <div class="tab-pane fade" id="links" role="tabpanel">
                    <div class="card">
                        <div class="card-header bg-light">
                            <h3 class="mb-0">
                                <i class="fas fa-link me-2"></i> Useful Links
                            </h3>
                        </div>
                        <div class="card-body">
                            <% if (links && links.length > 0) { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% links.forEach(link => { %>
                                                <tr>
                                                    <td>
                                                        <i class="fas fa-external-link-alt me-2 text-primary"></i>
                                                        <%= link.name %>
                                                    </td>
                                                    <td><%= link.description %></td>
                                                    <td>
                                                        <a href="<%= link.url %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                                            Open Link
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } else { %>
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No links available.
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .file-tree-list {
        list-style: none;
        margin: 0;
    }
    
    .file-tree-item {
        margin-bottom: 0.5rem;
    }
    
    .file-tree-folder {
        cursor: pointer;
        padding: 0.25rem 0;
        display: flex;
        align-items: center;
    }
    
    .file-tree-file {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        padding: 0.25rem 0;
    }
    
    .file-tree-file:hover {
        color: #0A2342;
        text-decoration: underline;
    }
    
    .file-tree-container {
        max-height: 600px;
        overflow-y: auto;
        border: 1px solid #eee;
        border-radius: 4px;
        padding: 1rem;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle folder expansion
        document.querySelectorAll('.file-tree-folder').forEach(folder => {
            folder.addEventListener('click', function() {
                const list = this.nextElementSibling;
                if (list && list.classList.contains('file-tree-list')) {
                    const isHidden = list.style.display === 'none';
                    list.style.display = isHidden ? 'block' : 'none';
                    
                    // Update folder icon
                    const icon = this.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('fa-folder', !isHidden);
                        icon.classList.toggle('fa-folder-open', isHidden);
                    }
                }
            });
            
            // Trigger once to collapse all folders initially
            folder.click();
        });
        
        // Announcements Editor Functionality
        const editAnnouncementsBtn = document.getElementById('editAnnouncementsBtn');
        const cancelEditBtn = document.getElementById('cancelEditBtn');
        const announcementsViewMode = document.getElementById('announcementsViewMode');
        const announcementsEditMode = document.getElementById('announcementsEditMode');
        
        if (editAnnouncementsBtn && cancelEditBtn && announcementsViewMode && announcementsEditMode) {
            // Toggle to edit mode
            editAnnouncementsBtn.addEventListener('click', function() {
                announcementsViewMode.style.display = 'none';
                announcementsEditMode.style.display = 'block';
                editAnnouncementsBtn.style.display = 'none';
            });
            
            // Cancel editing and return to view mode
            cancelEditBtn.addEventListener('click', function() {
                announcementsViewMode.style.display = 'block';
                announcementsEditMode.style.display = 'none';
                editAnnouncementsBtn.style.display = 'inline-block';
            });
        }
        
        // Make URL parameters accessible to EJS
        window.query = {};
        const urlParams = new URLSearchParams(window.location.search);
        for (const [key, value] of urlParams.entries()) {
            window.query[key] = value;
        }
        
        // Open relevant tab based on URL parameters
        if (window.query.tab) {
            const tabId = window.query.tab + '-tab';
            const tab = document.getElementById(tabId);
            if (tab) {
                tab.click();
            }
        }
        
        // Automatically open announcements tab after update
        if (window.query.success && window.query.success.includes('Announcements')) {
            const announcementsTab = document.getElementById('announcements-tab');
            if (announcementsTab) {
                announcementsTab.click();
            }
        }
    });
</script>

<!-- Upload File Modal -->
<div class="modal fade" id="uploadFileModal" tabindex="-1" aria-labelledby="uploadFileModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadFileModalLabel">Upload Content File</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/utilities/upload" method="POST" enctype="multipart/form-data" id="uploadForm">
                    <div class="mb-3">
                        <label for="contentType" class="form-label">Content Type</label>
                        <select class="form-select" id="contentType" name="contentType" required>
                            <option value="" selected disabled>Select content type...</option>
                            <option value="research">Research</option>
                            <option value="pitch_materials">Pitch Materials</option>
                            <option value="announcements">Announcements</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="fileUpload" class="form-label">Select File</label>
                        <input class="form-control" type="file" id="fileUpload" name="fileUpload" required>
                        <div class="form-text">Supported file types: .md, .jpg, .jpeg, .png, .gif, .pdf</div>
                    </div>
                    <div class="mb-3">
                        <label for="fileDescription" class="form-label">File Description (optional)</label>
                        <textarea class="form-control" id="fileDescription" name="fileDescription" rows="2"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitUploadBtn">Upload File</button>
            </div>

<script>
    // Add form validation for file upload
    document.addEventListener('DOMContentLoaded', function() {
        const submitUploadBtn = document.getElementById('submitUploadBtn');
        const uploadForm = document.getElementById('uploadForm');
        const contentTypeSelect = document.getElementById('contentType');
        const fileUploadInput = document.getElementById('fileUpload');
        
        if (submitUploadBtn && uploadForm) {
            submitUploadBtn.addEventListener('click', function() {
                // Check if content type is selected
                if (!contentTypeSelect.value) {
                    alert('Please select a content type');
                    return;
                }
                
                // Check if file is selected
                if (!fileUploadInput.value) {
                    alert('Please select a file to upload');
                    return;
                }
                
                // Submit the form if validation passes
                uploadForm.submit();
            });
        }
    });
</script>
        </div>
    </div>
</div>